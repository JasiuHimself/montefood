<div id="navBar">
  <%= image_tag "logo.png", id: "logo"%>
  <div id="napis">Montefood</div>
  <% if current_user %>
    <%= image_tag current_user.image_url, id: "avatar" %>
    <div id="avatarInfo">
      <%= link_to current_user.name, 'sign_out', method: :delete %>
    </div>
  <% else %>
    <div id="avatarInfo">
      Log in
    </div>
    <%= link_to "auth/github" do %>
    <%= image_tag "github.png", id: "avatar"%>
    <%- end %>
  <% end %>
</div>
<div class = "clear"></div>
<% if current_user %>
  <div id="root"></div>
  <%= javascript_include_tag "http://localhost:8080/static/js/bundle.js" %>
  <% end %>



 <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
  <% end -%> 
